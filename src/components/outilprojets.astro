                            {category.tools.map((tool) => (
                                <div class="tool-item-compact" title={tool.name}>
                                    <img 
                                        src={tool.image} 
                                        alt={tool.name}
                                        class="tool-icon"
                                        loading="lazy"
                                    />
                                    <span class="tool-name-compact">{tool.name}</span>
                                </div>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Section Projets -->
